<div class="form-group">
  <fieldset>
    <legend>{{properties.alias}}</legend>
    <sp-form vm:inline:from="properties.inline" 
      object:from="subFormObject" 
      on:fieldchange="saveField" 
      fields:from="formFields" 
      actions:from="formActions">
      <can-template name="submit"><i /></can-template>
    </sp-form>
  </fieldset>
</div>
