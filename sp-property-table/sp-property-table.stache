<div class="sp-property-table">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Field</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            {{#each fields as field}}
                <tr>
                    <td>{{field.alias}}</td>
                    <td class="{{field.classes}}">
                        {{!TODO: use slots}}
                        {{#if(field.displayComponent}}
                            {{>field.displayComponent}}
                        {{else}}
                            {{object[field.name]}}
                        {{/if}}
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
